%h1.mt-3.mb3= @event.name
.row 
  .col-8
    .card.mb-2 
      %h5.card-header イベント内容
      .card-body 
        %p.card-text= @event.content
    .card.mb-2 
      %h5.card-header 開催日時
      .card-body 
        - if @event.start_at && @event.end_at
          %p.card-text= "#{l(@event.start_at, format: :long)} - #{l(@event.end_at, format: :long)}"
        - else
          %p.card-text 日時情報がありません
    .card.mb-2
      %h5.card-header 開催場所
      .card-body 
        %p.card-text= @event.place
    .card.mb-2
      %h5.card-header 主催者
      .card-body 
        - if @event.owner
          = link_to("https://github.com/#{@event.owner.name}", class: "card-link") do
            = image_tag @event.owner.image_url, width: 50, height: 50, class: "rounded-circle"
            = "@#{@event.owner.name}"
        - else
          %p.card-text 主催者情報がありません

  .col-4 
    - if current_user && @event.created_by?(current_user)
      = link_to "イベントを編集する", edit_event_path(@event), class: "btn btn-info btn-lg btn-block"