<% now = Time.zone.now %>

<% if @event.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header">
          <h2 class="mb-0">イベント作成</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @event, class: "form-horizontal", local: true, html: { multipart: true }) do |f| %>

            <div class="mb-3">
              <%= f.label :name, "イベント名", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "イベント名を入力してください" %>
            </div>

            <div class="mb-3">
              <%= f.label :place, "場所", class: "form-label" %>
              <%= f.text_field :place, class: "form-control", placeholder: "場所を入力してください" %>
            </div>

            <div class="mb-3">
              <%= f.label :start_at, "開始日時", class: "form-label" %>
              <%= f.datetime_select :start_at, start_year: now.year, end_year: now.year + 1, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :end_at, "終了日時", class: "form-label" %>
              <%= f.datetime_select :end_at, start_year: now.year, end_year: now.year + 1, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :content, "イベント内容", class: "form-label" %>
              <%= f.text_area :content, class: "form-control", placeholder: "イベント内容を入力してください", rows: 5 %>
            </div>

            <div class="mb-3">
              <%= f.label :image, "イベント画像", class: "form-label" %>
              <%= f.file_field :image, class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit "イベントを作成", class: "btn btn-primary btn-lg" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
