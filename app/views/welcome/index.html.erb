<div class="container mt-5">
  <h1 class="text-center mb-4">イベント一覧</h1>

  <% if @events.empty? %>
    <div class="alert alert-info text-center">
      <p>まだイベントはありません</p>
    </div>
  <% else %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @events.each do |event| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= event.name %></h5>
              <p class="card-text text-muted">
                <%= "#{l(event.start_at, format: :long)} - #{l(event.end_at, format: :long)}" %>
              </p>
              <p class="card-text"><%= truncate(event.content, length: 100) %></p>
            </div>
            <div class="card-footer text-end">
              <%= link_to "詳細を見る", event_path(event), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
